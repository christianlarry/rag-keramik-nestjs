generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/// Roles untuk akses kontrol.
enum Role {
  ADMIN
  STAFF
  CUSTOMER
}

/// Status order sesuai lifecycle pembayaran/fulfillment.
enum OrderStatus {
  DRAFT
  PENDING_PAYMENT
  PAID
  FULFILLMENT
  COMPLETED
  CANCELLED
}

/// Status pembayaran Midtrans (dipetakan ke internal).
enum PaymentStatus {
  INITIATED
  PENDING
  SETTLEMENT
  CANCEL
  EXPIRE
  DENY
  REFUND
  FAILED
}

enum PaymentProvider {
  MIDTRANS
}

/// Status dokumen dalam pipeline ingestion.
enum DocumentStatus {
  UPLOADED
  PROCESSING
  INDEXED
  FAILED
}

enum ChatMessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

enum DiscountStatus {
  ACTIVE
  INACTIVE
  EXPIRED
}

enum DiscountApplicability {
  ALL_PRODUCTS
  SPECIFIC_PRODUCTS
  MINIMUM_PURCHASE
}

// --------------------------
// Core Users/Auth
// --------------------------
model User {
  id        String   @id @default(uuid())
  email     String   @unique @db.VarChar(255)
  password  String?  @db.VarChar(255)
  name      String?  @db.VarChar(255)
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  provider  String?  @db.VarChar(50) // e.g., google, facebook
  providerId String? @db.VarChar(255) // e.g., google id, facebook id

  carts     Cart[]
  orders    Order[]
  sessions  ChatSession[]
  audits    AuditLog[] @relation("AuditActor")
}

// --------------------------
// Product Catalog & Inventory
// --------------------------
model Product {
  id          String    @id @default(uuid())
  sku         String    @unique @db.VarChar(100)
  name        String    @db.VarChar(500)
  description String?   @db.Text
  brand       String?   @db.VarChar(255)
  imageUrl    String?   @db.VarChar(2048)
  price       Decimal   @db.Decimal(12, 2)
  tilePerBox  Int       
  currency    String    @default("IDR") @db.VarChar(3)
  attributes  Json?     // fleksibel: ukuran, grade, finishing, indoor/outdoor, anti-slip, dll
  status      String    @default("ACTIVE") @db.VarChar(50)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  inventory   Inventory?
  orderItems  OrderItem[]
  cartItems   CartItem[]
  productDiscounts ProductDiscount[]       // diskon langsung di produk (flash sale, promo)
  discountRestrictions DiscountProduct[]   // voucher yang dibatasi untuk produk ini
}

model Inventory {
  id         String   @id @default(uuid())
  productId  String   @unique
  stock      Int      @default(0)
  reserved   Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// --------------------------
// Discount/Voucher System
// --------------------------
model Discount {
  id              String                  @id @default(uuid())
  code            String                  @unique @db.VarChar(100)
  name            String                  @db.VarChar(255)
  description     String?                 @db.Text
  type            DiscountType
  applicability   DiscountApplicability   @default(ALL_PRODUCTS)
  value           Decimal                 @db.Decimal(12, 2)
  minPurchase     Decimal?                @db.Decimal(12, 2)
  maxDiscount     Decimal?                @db.Decimal(12, 2) // untuk percentage, batas maksimal diskon
  usageLimit      Int?                    // total usage limit
  usageCount      Int                     @default(0)
  perUserLimit    Int?                    // limit per user
  startDate       DateTime
  endDate         DateTime
  status          DiscountStatus          @default(ACTIVE)
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt
  
  orders          Order[]
  products        DiscountProduct[]       // products yang dibatasi untuk voucher ini
  
  @@index([code])
  @@index([status])
  @@index([startDate, endDate])
}

// Product-specific discount (untuk flash sale, promo terjadwal per produk)
model ProductDiscount {
  id          String          @id @default(uuid())
  productId   String
  name        String          @db.VarChar(255)
  description String?         @db.Text
  type        DiscountType
  value       Decimal         @db.Decimal(12, 2)
  startDate   DateTime
  endDate     DateTime
  status      DiscountStatus  @default(ACTIVE)
  priority    Int             @default(0) // untuk handling multiple discount, yang lebih tinggi diutamakan
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  product     Product         @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([status])
  @@index([startDate, endDate])
}

// Junction table: voucher yang hanya berlaku untuk produk tertentu
model DiscountProduct {
  id         String   @id @default(uuid())
  discountId String
  productId  String
  createdAt  DateTime @default(now())

  discount   Discount @relation(fields: [discountId], references: [id], onDelete: Cascade)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([discountId, productId])
  @@index([discountId])
  @@index([productId])
}

// --------------------------
// Cart & Order
// --------------------------
model Cart {
  id        String      @id @default(uuid())
  userId    String      @unique
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
}

model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  productId String
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([cartId])
  @@index([productId])
}

model Order {
  id             String       @id @default(uuid())
  orderNumber    String       @unique @db.VarChar(100) // idempotent reference for payments
  userId         String
  status         OrderStatus  @default(PENDING_PAYMENT)
  subtotal       Decimal      @db.Decimal(12, 2)
  tax            Decimal      @db.Decimal(12, 2) @default(0)
  shippingCost   Decimal      @db.Decimal(12, 2) @default(0)
  discountAmount Decimal      @db.Decimal(12, 2) @default(0)
  discountId     String?
  total          Decimal      @db.Decimal(12, 2)
  currency       String       @default("IDR") @db.VarChar(3)
  notes          String?      @db.Text
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user           User         @relation(fields: [userId], references: [id], onDelete: Restrict)
  discount       Discount?    @relation(fields: [discountId], references: [id], onDelete: SetNull)
  items          OrderItem[]
  payments       Payment[]

  @@index([userId])
  @@index([status])
  @@index([discountId])
}

model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  productId  String
  quantity   Int
  unitPrice  Decimal  @db.Decimal(12, 2)
  originalPrice Decimal  @db.Decimal(12, 2) // sebelum diskon
  currency   String   @default("IDR") @db.VarChar(3)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
}

// --------------------------
// Payments (Midtrans)
// --------------------------
model Payment {
  id                 String          @id @default(uuid())
  orderId            String
  provider           PaymentProvider @default(MIDTRANS)
  providerRef        String          @unique @db.VarChar(255) // midtrans order_id
  status             PaymentStatus   @default(INITIATED)
  amount             Decimal         @db.Decimal(12, 2)
  currency           String          @default("IDR") @db.VarChar(3)
  rawWebhookPayload  Json?
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt

  order              Order           @relation(fields: [orderId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([status])
}

// --------------------------
// Documents & Chunks (RAG)
// --------------------------
model Document {
  id          String         @id @default(uuid())
  title       String         @db.VarChar(500)
  filename    String         @db.VarChar(255)
  mimeType    String         @db.VarChar(100)
  sizeBytes   Int
  storageKey  String         @unique @db.VarChar(500)
  sourceType  String?        @db.VarChar(50) // e.g., CATALOG, FAQ, GUIDE
  status      DocumentStatus @default(UPLOADED)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  chunks      DocumentChunk[]
}

model DocumentChunk {
  id          String    @id @default(uuid())
  documentId  String
  seq         Int       // urutan chunk
  content     String    @db.Text
  metadata    Json?
  vectorId    String?   @db.VarChar(255) // id di vector DB (Qdrant)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  document    Document  @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
  @@index([vectorId])
}

// --------------------------
// Chat Sessions (RAG chat)
// --------------------------
model ChatSession {
  id        String        @id @default(uuid())
  userId    String?
  title     String?       @db.VarChar(500)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  user      User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  messages  ChatMessage[]

  @@index([userId])
}

model ChatMessage {
  id            String          @id @default(uuid())
  sessionId     String
  role          ChatMessageRole
  content       String          @db.Text
  contextUsed   Json?            // context chunks summary/ids
  model         String?         @db.VarChar(100) // llm/embedding model name used
  createdAt     DateTime         @default(now())

  session       ChatSession      @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([role])
}

// --------------------------
// Audit
// --------------------------
model AuditLog {
  id         String   @id @default(uuid())
  actorId    String?
  action     String   @db.VarChar(100) // e.g., PAYMENT_WEBHOOK, LOGIN, DOC_UPLOAD
  targetType String?  @db.VarChar(100)
  targetId   String?  @db.VarChar(255)
  metadata   Json?
  createdAt  DateTime @default(now())

  actor      User?    @relation("AuditActor", fields: [actorId], references: [id], onDelete: SetNull)

  @@index([actorId])
  @@index([action])
}
